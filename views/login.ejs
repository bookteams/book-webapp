<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../css/login.css">
    <link href="https://cdn.bootcss.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <title>网上书城</title>
</head>

<body>
    <div class="wrapper">
        <!-- 登录 -->
        <div class="box box-login">
            <div class="logo" id="logo"></div>

            <div class="box-content">
                <div class="userName content">
                        <div class="img1 form-img"></div>
                        <input type="text" placeholder="请输入用户名" id="username">
                </div>
                <div class="password content">
                    <div class="img2 form-img"></div>
                    <input type="password" placeholder="请输入密码" id="password">
                </div>
                <div class="signIn content">
                    <button id="btn">SIGN IN</button>
                </div>
            </div>

            <div class="image">
                <div class="leftImg twoImg"></div>
                <div class="rightImg twoImg"></div>
            </div>

            <div class="bottom">
                <a href="#" class="Forget" id="forgat-password">Forget password ?</a>
                <a href="#" class="Login" id="sign-up">Sign up</a>
            </div>
        </div>
        <!-- 注册 -->
        <div class="box box-register">
            <div class="logo" id="logo"></div>

            <div class="box-content">
                <div class="userName content">
                    <div class="img1 form-img"></div>
                    <input type="text" placeholder="请输入用户名" >
                </div>
                <div class="password content">
                    <div class="img2 form-img"></div>
                    <input type="password" placeholder="请输入密码" >
                </div>
                <div class="signIn content">
                    <button id="btn">SIGN UP</button>
                </div>
            </div>

            <div class="image">
                <div class="leftImg twoImg"></div>
                <div class="rightImg twoImg"></div>
            </div>

            <div class="bottom">
                <a href="#" class="Forget" id="signup-return-login">Return?</a>
            </div>
        </div>
        <!-- 找回密码 -->
        <div class="box box-retrieve">
            <div class="logo" id="logo"></div>

            <div class="box-content">
                <div class="userName content">
                    <div class="img1 form-img"></div>
                    <input type="text" placeholder="请输入您的邮箱">
                </div>
                <div class="password content">
                    <div class="img2 form-img"></div>
                    <input type="password" placeholder="请输入新密码">
                </div>
                <div class="signIn content">
                    <button id="btn">RETRIEVE</button>
                </div>
            </div>

            <div class="image">
                <div class="leftImg twoImg"></div>
                <div class="rightImg twoImg"></div>
            </div>

            <div class="bottom">
                <a href="#" class="Forget" id="retrieve-return-login">Return ?</a>
            </div>
        </div>


    </div>
    <script src="../js/login.js"></script>
</body>

</html>